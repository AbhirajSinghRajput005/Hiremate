<!DOCTYPE html><html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Browse Jobs - HireMate</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container">
      <a class="navbar-brand" href="/">HireMate</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/jobs">Browse Jobs</a>
          </li>
          <li class="nav-item client-only hidden">
            <a class="nav-link" href="/post-job">Post Job</a>
          </li>
          <li class="nav-item auth-required hidden">
            <a class="nav-link" href="/profile">My Profile</a>
          </li>
          <li class="nav-item guest-only">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item guest-only">
            <a class="nav-link" href="/signup">Sign Up</a>
          </li>
          <li class="nav-item auth-required hidden">
            <a class="nav-link" href="#" id="logout-btn">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Header -->
  <div class="bg-primary text-white py-4">
    <div class="container">
      <h1 class="mb-0">Browse Available Jobs</h1>
      <p class="mb-0">Find your next opportunity</p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container mt-4 mb-5">
    <!-- Search and Filter Section -->
    <div class="search-filter-section">
      <div class="row">
        <div class="col-md-6 mb-3 mb-md-0">
          <label for="search-input" class="form-label fw-bold">Search by Title</label>
          <input type="text" class="form-control" id="search-input" placeholder="Search jobs...">
        </div>
        <div class="col-md-6">
          <label for="tag-input" class="form-label fw-bold">Filter by Tag</label>
          <input type="text" class="form-control" id="tag-input" placeholder="Enter tag (e.g., design, coding)">
        </div>
      </div>
    </div>

    <!-- Jobs Listing -->
    <div class="row">
      <% if (jobs && jobs.length > 0) { %>
        <% jobs.forEach(function(job) { %>
          <div class="col-12 job-card" data-title="<%= job.title %>" data-tags="<%= job.tags.join(' ') %>">
            <div class="card">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><%= job.title %></h5>
                <span class="badge job-status-badge <%= job.isCompleted ? 'job-status-completed' : 'job-status-open' %>">
                  <%= job.isCompleted ? 'Completed' : 'Open' %>
                </span>
              </div>
              <div class="card-body">
                <p class="card-text"><%= job.description.substring(0, 150) %><%= job.description.length > 150 ? '...' : '' %></p>
                
                <div class="mb-3">
                  <strong>Budget:</strong> $<%= job.budget %>
                  <span class="ms-3"><strong>Deadline:</strong> <%= new Date(job.deadline).toLocaleDateString() %></span>
                </div>
                
                <div class="mb-3">
                  <strong>Posted by:</strong> <%= job.client.username %>
                </div>
                
                <% if (job.tags && job.tags.length > 0) { %>
                  <div class="mb-3">
                    <% job.tags.forEach(function(tag) { %>
                      <span class="tag"><%= tag %></span>
                    <% }); %>
                  </div>
                <% } %>
                
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-muted">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
                      <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5.784 6A2.24 2.24 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.3 6.3 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1zM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5"/>
                    </svg>
                    <%= job.applicants ? job.applicants.length : 0 %> Applicant(s)
                  </span>
                  <a href="/jobs/<%= job._id %>" class="btn btn-primary">View Details</a>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading">No Jobs Available</h4>
            <p>There are currently no jobs posted. Check back later!</p>
            <hr>
            <p class="mb-0 client-only hidden">Want to post a job? <a href="/post-job" class="alert-link">Click here</a></p>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-4 mt-auto">
    <div class="container">
      <p class="mb-0">&copy; 2025 HireMate. Empowering Student Freelancers.</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/script.js"></script>
</body>
</html>